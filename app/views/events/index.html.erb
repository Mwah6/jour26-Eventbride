<div class="jumbotron">
  <div class="container">

    <div class="d-flex justify-content-around">
      <h1 class="display-5">Eventbride</h1>
    </div>
  </div>
</div>

<div class="row">
  <%- @events.each do |event| -%>
  <div class="col-md-4">
    <h5><%= event.title %></h5>

    Date de début :<%= event.start_date %><br>
    Durée (en min) :<%= event.duration %><br>
    Date de début :<%= event.start_date %><br>
    Date de fin :<%= event.end_date %><br>
    Prix :<%= event.price %><br>
    Localisation :<%= event.location %><br>
    par :<%= event.administrator.first_name + " " + event.administrator.last_name%> <br><br>
    <a href="<%= event_path(event.id) %>" class="btn btn-primary btn-sm">Voir plus</a>
    <br><br>

  </div>

  <%- end -%>
</div>
</div>
