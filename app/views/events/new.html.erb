<% if @event.errors.any? %>
  <div class="alert alert-warning mt-2" role="alert">
    <p>Nous navons pas réussi à créer d'event pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <p>Merci de réessayer</p>
  </div>
<% end %>





<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_tag(events_path, method: 'post', id: "new_event",  html: { class: "form-signin mt-3" }) %>
      <h1 class="h3 mb-3 font-weight-normal text-center">Sign up</h1>

      <div class="form-group">
        <%= label_tag :start_date, "Date de début" %><br />
        <%= datetime_field_tag :start_date %>
      </div>
      <div class="form-group">
        <%= label_tag :duration %><br />
        <%= number_field_tag :duration, "Durée en minutes", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :title %><br />
        <%= text_field_tag :title,  "Titre", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :description %><br />
        <%= text_field_tag :description, "Description", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :price %><br />
        <%= number_field_tag :price,  "Prix", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag :location %><br />
        <%= text_field_tag :location,  "Localisation", class: "form-control" %>
      </div>
      <%= submit_tag "Enregistrer l'événement", class: "btn btn-primary" %>


    </div>
  </div>
</div>
